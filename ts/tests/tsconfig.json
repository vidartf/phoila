{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["dom", "es5", "es2015.promise", "es2015.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "../build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "../src/**/*.ts"
  ]
}
